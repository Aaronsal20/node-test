{
  "compilerOptions": {
    "incremental": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es2018",
    "noImplicitAny": false,
    "removeComments": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist/",
    "pretty": true,
    "baseUrl": ".",
    "alwaysStrict": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "traceResolution": false,
    "paths": {
      "*": ["node_modules/*", "*"]
    },
    "types": ["jest", "node"]
  },
  "include": ["src/**/*.ts"],
  "exclude": [".git", "node_modules"]
}
